#include <stdio.h>
int main()
{
	int input;
	int day = 0;
	int hour = 0;
	int minute = 0;
	int sec = 0;
	int tmp;

	scanf_s("%d", &input);

	day = input / 86400;
	hour = (input % 86400) / 3600;
	minute = ((input % 86400) % 3600) / 60;
	sec = ((input % 86400) % 3600) % 60;


	printf("%d %d %d", day, hour, minute, sec);

	return 0;
}
